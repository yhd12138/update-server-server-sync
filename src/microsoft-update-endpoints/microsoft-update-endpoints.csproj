<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0-windows10.0.26100.0</TargetFramework>
    <RootNamespace>Microsoft.PackageGraph.MicrosoftUpdate.Endpoints</RootNamespace>
    <AssemblyName>package-graph-endpoints-microsoft-update</AssemblyName>
    <PackageId>Microsoft.PackageGraph.MicrosoftUpdate.Endpoints</PackageId>
    <Authors>Cristian Petruta</Authors>
    <Company>Microsoft Corp.</Company>
    <Product />
    <Description>Endpoint implementations for the MicrosoftUpdate partition of the package graph. Implements the server role in the Windows Update MUv6 rotocol and both server and client roles in the WSUS protocol.</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <BaseOutputPath>..\..\out\microsoft-update-endpoints</BaseOutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>../documentation/xml-autogenerated/microsoft-update-endpoints.xml</DocumentationFile>
    <FileVersion>3.0.0.0</FileVersion>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <ProductVersion>3.0.0.0</ProductVersion>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.3.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.3.0" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel.Core" Version="2.3.6" />
    <PackageReference Include="SoapCore" Version="1.2.1.11" />
    <PackageReference Include="System.Formats.Asn1" Version="9.0.10" />
    <PackageReference Include="System.Text.RegularExpressions" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ClientSync\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\microsoft-update-partition\microsoft-update-partition.csproj" />
    <ProjectReference Include="..\microsoft-update-webservices\microsoft-update-webservices.csproj" />
  </ItemGroup>

</Project>
